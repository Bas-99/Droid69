<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#aeaaaa" />
            <stroke
                    android:width="1dp"
                    android:color="#aeaaaa" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#e8e3e3"
                    android:endColor="#e8e3e3"
                    android:angle="270" />
            <stroke
                    android:width="0dp"
                    android:color="#666666" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>