<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IdentificationActivity"
        android:background="@drawable/ic_second_screen">

    <ImageView
            app:srcCompat="@drawable/ic_last_page_2_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/imageView"/>
    <EditText
            android:layout_width="176dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullName"
            android:freezesText="false" android:rotation="-6"
            android:textSize="14dp" android:hint="Full Name" android:padding="10dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingBottom="10dp" android:paddingTop="10dp"
            android:textColorHint="#56000000" android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toTopOf="@+id/hobbys"
            app:layout_constraintVertical_bias="0.882" app:layout_constraintStart_toStartOf="@+id/hobbys"
            app:layout_constraintEnd_toStartOf="@+id/imageToUpload" app:layout_constraintHorizontal_bias="0.075"/>
    <Button
            android:text="V"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:id="@+id/check"
            android:rotation="-11"
            app:layout_constraintTop_toBottomOf="@+id/hobbys" app:layout_constraintEnd_toEndOf="@+id/hobbys"
            android:layout_marginTop="212dp" android:layout_marginEnd="148dp" android:layout_marginRight="148dp"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/hobbys"
            android:lineSpacingExtra="15dp"
            android:rotation="-6"
            android:textSize="14dp" app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/thingsEnjoy"
            android:padding="10dp" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.187" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.435" android:textColorHint="#56000000" android:textColor="#000000"/>
    <ImageView
            android:id="@+id/imageToUpload"
            android:layout_width="100dp"
            android:layout_height="148dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/hobbys"
            android:layout_marginLeft="72dp" android:layout_marginTop="296dp" android:layout_marginStart="72dp"
            android:alpha="0.8"/>
    <TextView
            android:text="Do you agree on the "
            android:layout_width="97dp"
            android:layout_height="13dp" android:id="@+id/agreement"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/check"
            android:layout_marginBottom="45dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check" app:layout_constraintHorizontal_bias="0.129"
            android:textColor="#56000000" android:rotation="-9"/>
    <TextView
            android:text="Privacy Policy this app uses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/agreement_2"
            android:textColor="#56000000" android:textSize="10dp"
            android:rotation="9" app:layout_constraintStart_toEndOf="@+id/agreement"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/agreement" android:layout_marginTop="2dp"/>
    <TextView
            android:text="Full Name:"
            android:layout_width="101dp"
            android:layout_height="34dp" android:id="@+id/fullNameTitle"
            android:rotation="-10" android:textColor="#000000"
            android:textSize="18dp" app:layout_constraintBottom_toBottomOf="@+id/fullName"
            android:layout_marginBottom="36dp" app:layout_constraintStart_toStartOf="@+id/fullName"
            android:textStyle="bold"/>
    <TextView
            android:text="Things You Like To Do:"
            android:layout_width="191dp"
            android:layout_height="24dp" android:id="@+id/thingsYouLike"
            android:textSize="16dp" android:rotation="-7"
            android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/fullName"
            app:layout_constraintStart_toStartOf="@+id/fullName" android:textStyle="bold"/>
    <TextView
            android:text="Add picture here"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/addPicture"
            app:layout_constraintTop_toTopOf="@+id/imageToUpload" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/imageToUpload" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textColor="#56000000" android:gravity="center"
            android:rotation="6"/>

</androidx.constraintlayout.widget.ConstraintLayout>