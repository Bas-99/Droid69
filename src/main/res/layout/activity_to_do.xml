<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AgendaActivity"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_menu"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ToDoActivity">
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#D68CE3"
                android:id="@+id/toolbar"
                android:theme="?attr/actionBarTheme"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_menu"/>
        <TextView
                android:id="@+id/activeTasks"
                android:text="Currently Active Tasks:"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/toolbar"
                app:layout_constraintRight_toRightOf="@id/toolbar"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ScrollView
                android:id="@+id/scrollViewActiveTasks"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/activeTasks">
            <LinearLayout
                    android:id="@+id/layoutTasks"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </LinearLayout>

        </ScrollView>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutAddRemove"
                app:layout_constraintTop_toBottomOf="@id/scrollViewActiveTasks"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/addTasks"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"/>
            <ImageView
                    android:id="@+id/plusTask"
                    app:srcCompat="@drawable/ic_plus"
                    android:layout_alignLeft="@id/addTasks"
                    android:layout_alignTop="@id/addTasks"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/addTasks"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:text="Add"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignLeft="@id/addTasks"
                    android:layout_alignRight="@id/addTasks"
                    android:layout_alignTop="@id/addTasks"
                    android:layout_alignBottom="@id/addTasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxContainer"
                app:layout_constraintTop_toBottomOf="@id/relativeLayoutAddRemove"
                android:orientation="vertical">

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>